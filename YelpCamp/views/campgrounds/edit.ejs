<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="post" class="needs-validation"
                novalidate>


                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title required"
                        value="<%= campgrounds.title %>">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campgrounds.location %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="image"
                        value="<%= campgrounds.image %>" required>
                </div>
                <div class="mb3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.0" name="campground[price]"
                            value=" <%=campgrounds.price %>" aria-label=" Amount (to the nearest dollar)"
                            aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description"
                        required><%= campgrounds.description %></textarea>
                </div>


                <div class="mb-3">
                    <button class="btn btn-primary">Update Campground</button>
                </div>



            </form>
            <div>
                <a href="/campgrounds">Back to Campground</a>
            </div>

        </div>

    </div>